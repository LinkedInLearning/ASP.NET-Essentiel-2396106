{
  "$schema": "https://schema.management.azure.com/schemas/2018-05-01/subscriptionDeploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "resourceGroupName": {
      "type": "string",
      "defaultValue": "ProduitRG",
      "metadata": {
        "_parameterType": "resourceGroup",
        "description": "Nom du groupe de ressources de la ressource. Il est recommandé de placer les ressources sous le même groupe de ressources pour un meilleur suivi."
      }
    },
    "resourceGroupLocation": {
      "type": "string",
      "defaultValue": "centralus",
      "metadata": {
        "_parameterType": "location",
        "description": "Emplacement du groupe de ressources. Les groupes de ressources peuvent avoir un emplacement différent de celui des ressources."
      }
    },
    "resourceLocation": {
      "type": "string",
      "defaultValue": "[parameters('resourceGroupLocation')]",
      "metadata": {
        "_parameterType": "location",
        "description": "Emplacement de la ressource. Par défaut, utilisez l'emplacement du groupe de ressources, sauf s'il ne prend pas en charge le fournisseur de ressources."
      }
    }
  },
  "resources": [
    {
      "type": "Microsoft.Resources/resourceGroups",
      "name": "[parameters('resourceGroupName')]",
      "location": "[parameters('resourceGroupLocation')]",
      "apiVersion": "2019-10-01"
    },
    {
      "type": "Microsoft.Resources/deployments",
      "name": "[concat(parameters('resourceGroupName'), 'Deployment', uniqueString(concat('EvaluationProduitAPIs', subscription().subscriptionId)))]",
      "resourceGroup": "[parameters('resourceGroupName')]",
      "apiVersion": "2019-10-01",
      "dependsOn": [
        "[parameters('resourceGroupName')]"
      ],
      "properties": {
        "mode": "Incremental",
        "template": {
          "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
          "contentVersion": "1.0.0.0",
          "resources": [
            {
              "name": "EvaluationProduitAPIsapi",
              "type": "Microsoft.ApiManagement/service",
              "location": "[parameters('resourceLocation')]",
              "properties": {},
              "sku": {
                "name": "Consumption",
                "capacity": 0
              },
              "identity": null,
              "apiVersion": "2019-12-01"
            },
            {
              "type": "Microsoft.ApiManagement/service/apis",
              "name": "EvaluationProduitAPIsapi/EvaluationProduitAPIs",
              "properties": {},
              "apiVersion": "2019-12-01",
              "dependsOn": [
                "EvaluationProduitAPIsapi"
              ]
            }
          ]
        }
      }
    }
  ],
  "metadata": {
    "_dependencyType": "apis.azure"
  }
}